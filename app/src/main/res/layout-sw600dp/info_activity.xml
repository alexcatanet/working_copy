<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="425dp"
        android:contentDescription="@string/info_background_im"
        android:src="@drawable/info_bg" />

    <View style="@style/Divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:autoLink="web"
        android:padding="30dp"
        android:text="@string/info_txt"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="685dp"
        android:contentDescription="@string/splash_logo_rsr"
        android:src="@drawable/splash_logo_rsr" />

</RelativeLayout>