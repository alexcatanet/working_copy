<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="9dp">

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/cancel_img"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/cancel_img"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="@string/cancel_popup_txt"
        android:textAllCaps="false"
        android:textColor="@color/whiteText" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancel_btn">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:alpha="0.75"
            android:contentDescription="@string/transparent_background_dialog_img"
            android:src="@color/dialog_color" />

        <LinearLayout
            android:id="@+id/dialog_info"
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/dialog_text_title"
                android:textColor="@color/whiteText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:text="@string/dialog_text_content"
                android:textColor="@color/whiteText" />

            <Button
                android:id="@+id/dialog_btn_dialing"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:drawableLeft="@drawable/main_btn_ringing"
                android:drawableStart="@drawable/main_btn_ringing"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingStart="20dp"
                android:text="@string/dialog_text_calling"
                android:textAllCaps="false"
                android:textColor="@color/whiteText" />

            <View style="@style/Button_Divider_Call_Popup">

            </View>

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
